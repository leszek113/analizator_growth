# Przykładowy plik zmiennych środowiskowych
# Skopiuj do .env i ustaw odpowiednie wartości

# API Key dla autoryzacji (WYMAGANE w produkcji)
API_KEY=your_secret_api_key_here

# Środowisko (development, production, testing)
FLASK_ENV=development

# Debug mode
DEBUG=true

# Port aplikacji
PORT=5002

# Flask secret key (WYMAGANE w produkcji)
FLASK_SECRET_KEY=your_very_strong_secret_key_here

# Konfiguracja bazy danych (opcjonalne)
DATABASE_URL=sqlite:///data/analizator_growth.db

# Google Sheets credentials (ścieżka do pliku)
GOOGLE_CREDENTIALS_PATH=secrets/credentials.json

# Google Sheets configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SHEET_NAME=03_DK_Master_XLS_Source
GOOGLE_WORKSHEET_NAME=DK

# Yahoo Finance API (opcjonalne)
YAHOO_FINANCE_API_KEY=your_yahoo_api_key_here

# Project configuration
PROJECT_ROOT=/path/to/analizator_growth

# Logowanie
LOG_LEVEL=INFO
