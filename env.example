# Przykładowy plik zmiennych środowiskowych
# Skopiuj do .env i ustaw odpowiednie wartości

# API Key dla autoryzacji (wymagane w produkcji)
API_KEY=your_secret_api_key_here

# Środowisko (development, production, testing)
FLASK_ENV=development

# Debug mode
DEBUG=true

# Port aplikacji
PORT=5001

# Konfiguracja bazy danych (opcjonalne)
DATABASE_URL=sqlite:///data/analizator_rynku.db

# Google Sheets credentials (ścieżka do pliku)
GOOGLE_CREDENTIALS_PATH=secrets/credentials.json

# Logowanie
LOG_LEVEL=INFO
